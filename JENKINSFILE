pipeline {
    agent any
    
    stages{
        stage('GetCode'){
            steps {
                git 'https://github.com/juanjomalouu/UNIR.git'
            }
        }
        stage('Build'){
            steps {
                echo 'NO HAY QUE COMPILAR NADA, ESTO ES PYTHON'
                bat "dir"
            }
        }
        stage('Tests'){
           parallel {
                stage('Unit'){
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            bat '''
                                set PYTHONPATH=%WORKSPACE%
                                pytest --junitxml=result-unit.xml test\\unit
                            '''
                        }
                    }
                }
                stage('Rest') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            bat '''
                                SET FLASK_APP=app\\api.py
                                START flask run
                                SET PYTHONPATH=%WORKSPACE%
                                START java -jar C:\\Users\\Juanjo\\Desktop\\GitHub\\UNIR\\test\\wiremock-standalone-3.10.0.jar --port 9090 --root-dir C:\\Users\\Juanjo\\Desktop\\GitHub\\UNIR 
                                pytest --junitxml=result-rest.xml test\\rest
                            '''
                        }
                    }
                }
            }
        }
        stage('Results'){
            steps {
                junit 'result*.xml'
            }
        }
    }
}
